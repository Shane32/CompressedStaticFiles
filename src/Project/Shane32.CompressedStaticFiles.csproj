<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Description>ASP.NET Core middleware that automatically serves pre-compressed static files (Brotli, Gzip, or custom encodings) based on client Accept-Encoding headers with quality value support, falling back to uncompressed files when needed.</Description>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
